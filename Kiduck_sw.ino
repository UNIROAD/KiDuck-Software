}

void loop(){
  if(screen==1){
    if(buttonMapList()){
      Serial.println(listtest.getCursorPos());
      delay(1);

      listDisplay();
    }
  }
  if(fall_edge(3, &prev3, &curr3)){
    screen=(screen+1)%2;
    if(screen){
      listDisplay();
    }
    else{
      duckDisplay();
    }
  }
}


