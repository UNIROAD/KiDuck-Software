List listtest = listConstructTest();


void setup(){
 Serial.begin(9600);
 SSD1306_Setup();
 
 startupDisplay();
 duckDisplay();

 setButtonPinMode();
 pinMode(LED_BUILTIN, OUTPUT);
}

void loop(){
  if(screen==1){
    if(buttonMapList(&listtest)){
      delay(1);
      listDisplay(&listtest);
    }
  }
  if(fall_edge(3, &prev3, &curr3)){
    screen=(screen+1)%2;
    if(screen) listDisplay(&listtest);
    else duckDisplay();
  }
}


